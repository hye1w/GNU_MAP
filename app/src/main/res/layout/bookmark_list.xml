<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"> <!-- 중요 -->



    <LinearLayout
        android:id="@+id/building_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="5dp"  >

        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:layout_margin="5dp"
            app:cardCornerRadius="30dp" >

            <ImageView
                android:id="@+id/building_img"
                android:layout_width="80dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_launcher_background"
                android:scaleType="fitXY"
                app:tint="#40000000"
                android:tintMode="src_atop"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:layout_gravity="center|center_horizontal|center_vertical"
                android:layout_margin="5dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/campus_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@color/white"
                    android:backgroundTint="#A4FFFFFF"
                    android:padding="3dp"
                    android:text="캠퍼스"
                    android:textColor="@color/black"
                    android:textSize="13dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/buildingnum_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="건물번호"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/buildingname_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_marginTop="5dp"
                    android:ellipsize="marquee"
                    android:gravity="center"
                    android:hapticFeedbackEnabled="false"
                    android:maxLines="2"
                    android:text="건물명"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:textStyle="bold" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</LinearLayout>